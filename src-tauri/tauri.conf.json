{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MockMate",
  "version": "0.1.0",
  "identifier": "com.mockmate.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "MockMate",
        "width": 800,
        "height": 110,
        "minWidth": 400,
        "minHeight": 30,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    }
  },
  "plugins": {
    "fs": {
      "scope": [
        "$APPDATA/*",
        "$TEMP/*"
      ]
    },
    "shell": {
      "scope": [
        {
          "name": "open-browser",
          "cmd": "cmd",
          "args": ["/C", "start", { "validator": "https?://.*" }]
        }
      ]
    },
    "deepLink": {
      "schemes": ["mockmate"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": false,
      "certificateThumbprint": "5436D3EC98DBD6D237F46484FABBF52414054C15",
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.sectigo.com",
      "signCommand": "C:\\Program Files (x86)\\Windows Kits\\10\\App Certification Kit\\signtool.exe",
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "displayLanguageSelector": false
      }
    }
  }
}
