{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MockMate Assistant",
  "version": "0.1.0",
  "identifier": "com.mockmate.app",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "MockMate Assistant",
        "width": 800,
        "height": 160,
        "minWidth": 800,
        "minHeight": 160,
        "maxWidth": 800,
        "maxHeight": 160,
        "resizable": false,
        "fullscreen": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "center": false,
        "x": 560,
        "y": 0
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": false,
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "displayLanguageSelector": false
      }
    }
  },
  "plugins": {
    "fs": {
      "scope": [
        "$APPDATA/*",
        "$TEMP/*"
      ]
    },
    "shell": {
      "scope": [
        {
          "name": "open-browser",
          "cmd": "cmd",
          "args": ["/C", "start", { "validator": "https?://.*" }]
        }
      ]
    }
  }
}
